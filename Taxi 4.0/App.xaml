<Application x:Class="Taxi_4._0.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Taxi_4._0">
    
    <Application.Resources>
        <Style TargetType="Button" x:Key="Navigation button">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="Red"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="Main text">
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="Foreground" Value="Red"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="Headder text">
            <Setter Property="FontSize" Value="50"/>
            <Setter Property="Foreground" Value="Red"/>
        </Style>

        <Style TargetType="TextBox" x:Key="Field" >
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="BorderBrush" Value="Red"/>
            <Setter Property="FontSize" Value="30"/>
        </Style>

    </Application.Resources>
</Application>
